{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/"
  },
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.13",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.13",
    "@types/react": "npm:@types/react@^19.1.13",
    "@types/react-dom": "npm:@types/react-dom@^19.1.9",
    "@vitejs/plugin-react-swc": "npm:@vitejs/plugin-react-swc@^4.0.1",
    "autoprefixer": "npm:autoprefixer@^10.4.21",
    "daisyui": "npm:daisyui@^5.1.14",
    "postcss": "npm:postcss@^8.5.6",
    "react": "npm:react@^19.1.1",
    "react-dom": "npm:react-dom@^19.1.1",
    "tailwindcss": "npm:tailwindcss@^4.1.13",
    "vite": "npm:vite@^7.1.5"
  }
}
